<% if @parties.count > 0 %>
  <h2> Here are all of the available parties! </h2>
  <% @parties.each do |party| %>
    <li><%= link_to party.name, party_path(party) %></li>
  <% end %>

<% else %>

  <h2> There are no parties at this time. </h2>
  <h3><%= link_to "Create one!", new_party_path %></h3>

<% end %>
