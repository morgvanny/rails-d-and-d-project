<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  <div style="float: left" > <%= link_to "Home", root_path %> <%= link_to "Leaderboard", characters_leaderboard_path %></div>
  <div style="float: right" > <%= link_to "Sign out", destroy_user_session_path, :method => :delete %> </div>
  <br>
<% end %>

<%= yield %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
</body>
</html>
